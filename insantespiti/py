import cv2
from ultralytics import YOLO
import numpy as np
from collections import defaultdict

# Modeli yükle
model = YOLO("yolov8n.pt")  # COCO dataset ile eğitilmiş

# Görsel yolu (örneğin insanlı veya insan + arabalı)
img_path = r"C:\Users\KIRIKHAN BİLGİSAYAR\Downloads\test_image.jpeg"
img = cv2.imread(img_path)
height, width, _ = img.shape

# Tahmin yap
results = model.predict(source=img, conf=0.5, save=False, verbose=False)

# Sonuçları işle
boxes = []
class_ids = []
confidences = []
class_counts = defaultdict(int)  # Her sınıftan kaç tane olduğunu tutmak için

colors = np.random.uniform(0, 255, size=(len(model.names), 3))

for result in results:
    for box in result.boxes:
        cls_id = int(box.cls[0])
        conf = float(box.conf[0])
        x1, y1, x2, y2 = map(int, box.xyxy[0])

        class_counts[model.names[cls_id]] += 1

        boxes.append([x1, y1, x2 - x1, y2 - y1])
        class_ids.append(cls_id)
        confidences.append(conf)

# Non-Maximum Suppression
indexes = cv2.dnn.NMSBoxes(boxes, confidences, 0.5, 0.4)

# Görselleştirme
font = cv2.FONT_HERSHEY_SIMPLEX
for i in range(len(boxes)):
    if i in indexes:
        x, y, w, h = boxes[i]
        label = str(model.names[class_ids[i]])
        color = colors[class_ids[i]]
        cv2.rectangle(img, (x, y), (x + w, y + h), color, 2)
        cv2.putText(img, label, (x, y - 10), font, 0.8, color, 2)

# Sınıf sayısını ekrana yaz
y_offset = 30
for label, count in class_counts.items():
    text = f"{label}: {count}"
    cv2.putText(img, text, (10, y_offset), font, 0.7, (0, 255, 255), 2)
    y_offset += 25

# Göster
cv2.imshow("YOLOv8 Nesne Tespiti", img)
cv2.waitKey(0)
cv2.destroyAllWindows()
